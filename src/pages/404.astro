---
import { Image } from "astro:assets";
import logo from "../assets/rks_logo.webp";
import instagramLogo from "../assets/icon_ig.webp";
import youtubeLogo from "../assets/icon_youtube.webp";
import bgImage from "../assets/bg_ground.webp";
import LayoutBlank from "../layouts/LayoutBlank.astro";
---

<LayoutBlank
	title="Renggani Karya Semesta - Software House dengan Banyak Produk Unggulan"
>
	<main
		style=`background-image:url('${bgImage.src}')`
		class="lg:px-20 px-5 flex flex-col justify-center bg-cover min-h-screen bg-center bg-no-repeat gap-10 items-center lg:items-start"
	>
		<Image
			loading={"eager"}
			src={logo}
			alt={"logo renggani karya semesta"}
			width={200}
			height={100}
			class={`h-auto`}
		/>
		<section class="lg:w-[700px] text-center lg:text-start">
			<h1 class="lg:text-5xl text-3xl font-bold text-white">
				Something Extraordinary is <br />
				Being Prepared for You
			</h1>
			<p class="text-white mt-5 lg:text-2xl">
				Our website is currently undergoing enhancements. <br />
				Thank you for your understanding, and stay tuned for something amazing!
				If you have any questions, feel free to reach out to us.
			</p>
			<div class="flex mt-5 items-center justify-center lg:justify-start">
				<a
					href="https://api.whatsapp.com/send?phone=6289512589756"
					target="_blank"
					rel="noopener noreferrer"
					class="py-3 px-5 bg-gradient-to-tr from-[#004AC9] to-[#002463] text-white from-50% font-medium rounded-lg lg:text-2xl"
					>Contact Us</a
				>
				<a href="https://www.instagram.com/rengganikarya.semesta/" target="_blank" rel="noopener noreferrer">
					<Image
						loading={"eager"}
						src={instagramLogo}
						alt={"logo instagram renggani karya semesta"}
						width={60}
						height={50}
						class={`ml-5`}
					/>
				</a>
				<a href="https://www.youtube.com/@rengganikaryasemesta" target="_blank" rel="noopener noreferrer">
					<Image
						loading={"eager"}
						src={youtubeLogo}
						alt={"logo youtube renggani karya semesta"}
						width={60}
						height={50}
						class={`ml-5`}
					/>
				</a>
			</div>
		</section>
	</main>
</LayoutBlank>
